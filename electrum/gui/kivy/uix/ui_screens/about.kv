#:import VERSION electrum.version.ELECTRUM_VERSION

Popup:
    title: _("About Noir Electrum")
    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'
        GridLayout:
            cols: 2
            spacing: '10dp'
            TopLabel:
                text: _('Version')
                size_hint_x: 0.4
            TopLabel:
                text: VERSION
                size_hint_x: 0.6
            TopLabel:
                text: _('Licence')
                size_hint_x: 0.4
            TopLabel:
                text: "MIT Licence"
                size_hint_x: 0.6
            TopLabel:
                text: _('Homepage')
                size_hint_x: 0.4
            TopLabel:
                markup: True
                text: '[color=6666ff][ref=x]https://noirofficial.org[/ref][/color]'
                on_ref_press:
                    import webbrowser
                    webbrowser.open("https://noirofficial.org")
                size_hint_x: 0.6
            TopLabel:
                text: _('Twitter')
                size_hint_x: 0.4
            TopLabel:
                markup: True
                text: '[color=6666ff][ref=x]https://twitter.com/noircoin[/ref][/color]'
                on_ref_press:
                    import webbrowser
                    webbrowser.open("https://twitter.com/noircoin")
                size_hint_x: 0.6
            TopLabel:
                text: _('Block Explorer')
                size_hint_x: 0.4
            TopLabel:
                markup: True
                text: '[color=6666ff][ref=x]https://explorer.noirofficial.org[/ref][/color]'
                on_ref_press:
                    import webbrowser
                    webbrowser.open("https://explorer.noirofficial.org")
                size_hint_x: 0.6
            TopLabel:
                text: _('Mining Pool')
                size_hint_x: 0.4
            TopLabel:
                markup: True
                text: '[color=6666ff][ref=x]https://pool.noirofficial.org[/ref][/color]'
                on_ref_press:
                    import webbrowser
                    webbrowser.open("https://pool.noirofficial.org/")
                size_hint_x: 0.6
            TopLabel:
                text: _('Developers')
                size_hint_x: 0.4
            TopLabel:
                text: '\n'.join(['flo071'])
                size_hint_x: 0.6
        TopLabel:
            text: _('Distributed by The Noir Team')
            padding: '0dp', '20dp'
        Widget:
            size_hint: None, 0.5
        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Widget:
                size_hint: 0.5, None
                height: '48dp'
            Button:
                size_hint: 0.5, None
                height: '48dp'
                text: _('Close')
                on_release: root.dismiss()
